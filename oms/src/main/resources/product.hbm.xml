<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.sapient.oms.entity.Product" table = "products">
      <meta attribute = "class-description">
         This class contains the product blueprint. 
      </meta>
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "productName" column = "product_name" type = "string"/>
      <property name = "cost" column = "cost" type = "double"/>
      <property name = "mdate" column = "mdate" type = "date"/>
      <property name = "edate" column = "edate" type = "date"/>
      
   </class>
</hibernate-mapping>